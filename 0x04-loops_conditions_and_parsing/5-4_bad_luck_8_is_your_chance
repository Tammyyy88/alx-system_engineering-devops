#!/usr/bin/env bash
# This script loops from 1 to 10 and displays different messages based on the iteration.

# Initialize a counter variable
count=1

# Use a while loop to iterate from 1 to 10
while [ $count -le 10 ]; do
    # Check for the specific iteration numbers and display the corresponding message
    if [ $count -eq 4 ]; then
        echo "bad luck"
    elif [ $count -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
    ((count++))
done
